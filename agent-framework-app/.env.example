# --- App Config ---
APP_ENV=development
BACKEND_PORT=8000
FRONTEND_PORT=5173
PERF_DEBUG=0

# --- Observability ---
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_SERVICE_NAME=ai-workflow-builder

# --- Sandbox Limits ---
SANDBOX_CPU_LIMIT=1
SANDBOX_MEMORY_MB=512
SANDBOX_TIMEOUT_SEC=60
